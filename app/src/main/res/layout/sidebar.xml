<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#99CACDCA"
    android:orientation="vertical"
    android:id="@+id/drawer">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/kyobo"
        android:text="menu">
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_margin="10dp"
        android:layout_marginVertical="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menu_daily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘의 추천 데일리 룩"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:paddingBottom="30dp"
            android:fontFamily="@font/kyobo"/>

        <TextView
            android:id="@+id/menu_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="날씨별 코디 추천"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:paddingBottom="30dp"
            android:fontFamily="@font/kyobo"/>

        <TextView
            android:id="@+id/menu_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘의 행운의 컬러 코디"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:paddingBottom="30dp"
            android:fontFamily="@font/kyobo"/>

        <TextView
            android:id="@+id/menu_community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick뮤니티"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/kyobo"/>

        <TextView
            android:id="@+id/menu_community_free"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- 자유게시판"
            android:layout_marginLeft="40dp"
            android:textSize="20dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/kyobo"/>

        <TextView
            android:id="@+id/menu_community_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- 코디 추천 게시판"
            android:layout_marginLeft="40dp"
            android:textSize="20dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/kyobo"/>

        <TextView
            android:id="@+id/menu_community_trade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- 중고거래 게시판"
            android:layout_marginLeft="40dp"
            android:textSize="20dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/kyobo"/>


    </LinearLayout>





</LinearLayout>